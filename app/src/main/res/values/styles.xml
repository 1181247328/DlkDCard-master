<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_one">
        <item name="android:textColor">@color/tab_main_text_default</item>
    </style>

    <style name="style_two">
        <item name="android:textColor">@color/shop</item>
    </style>

    <style name="style_shop_one">
        <item name="android:textSize">@dimen/text_shop_one</item>
    </style>

    <style name="style_shop_two">
        <item name="android:textColor">@dimen/text_shop_two</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
